
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/charts.css" />


<div class="chart-container">
    <canvas id="results-chart"></canvas>
</div>


<button type="button" class="btn btn-primary chartSettingsModalButton" data-toggle="modal" data-target="#chartSettingsModal">
    Change chart view
</button>



<div class="modal fade" id="chartSettingsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Chart Settings</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="chart-toolbar-container">
                    <form class="chart-toolbar">
                        <div class="form-group">
                            <label for="selectView">Select view</label>
                            <select class="form-control" id="selectView" name="View">
                                <option value="0">Cash flow time series</option>
                                <option value="1">Free transactions count</option>
                                <option value="2">Paid transactions count</option>
                                <option value="3">Credit transactions count</option>
                                <option value="4">Quarterly report</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="fromDate" id="labelForFromDate">From</label><br />
                            <input type="text" id="fromDate" class="datePicker" name="FromDate">
                        </div>
                        <div class="form-group">
                            <label for="toDate" id="labelForToDate">To</label><br />
                            <input type="text" id="toDate" class="datePicker" name="ToDate">
                        </div>

                    </form>



                </div>
                <div class="alert alert-primary" role="alert" id="loadingAlert">
                    Loading chart......
                </div>
                <div class="alert alert-danger fade show" role="alert" id="datesCannotBeEmptyAlert">
                    <strong>Attention!</strong> Dates cannot be empty for this chart.
                </div>
                <div class="alert alert-danger fade show" role="alert" id="fromDateMustBeBeforeAlert">
                    <strong>Attention!</strong> From date must be before to date.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="updateChartButton">Update chart</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/formControl.js" asp-append-version="true"></script>
<script src="~/js/chartControl.js" asp-append-version="true"></script>
